    constructor Playground new() {
        var int i, j;
        var Array col;

        do drawSideEdges();

        let screenOffset = 10;
        let MAXROW = 16;
        let MAXCOL = 10;
        // MAXROW + 1 add all block for collide detection.
        let row = Array.new(MAXROW+1);
        let col = Array.new(MAXCOL);
        
        let i = 0;
        
        while (i < MAXROW) {
            let j = 0;
            while (j < MAXCOL) {
                let col[j] = 0;
                let j = j + 1;
            }
            let row[i] = col;
            let col = Array.new(MAXCOL);
            let i = i + 1;
        }

        // add the bottom blocks
        let j = 0;
        while (j < MAXCOL) {
            let col[j] = 1;
            let j = j + 1;
        }
        let row[16] = col;

        //zzzz debug set line
        /*
        let j = 0;
        while (j < MAXCOL) {
            let col[j] = 1;
            let j = j + 1;
        }
        let row[15] = col;
        do drawLine(15);
        */
        /*
        if (isFillLine(15)){
            do eraseLine(15);
        }
        */
        return this;
    }

